@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <h1 class="text-primary text-center">@localizer["Title"]</h1>

    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="text-decoration-none text-primary">
                        <i class="bi bi-list-check fs-2"></i>
                        <h5 class="card-title">@localizer["Categories"]</h5>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <a asp-area="Admin" asp-controller="SubCategory" asp-action="Index" class="text-decoration-none text-primary">
                        <i class="bi bi-tags fs-2"></i>
                        <h5 class="card-title">@localizer["SubCategories"]</h5>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="text-decoration-none text-primary">
                        <i class="bi bi-box fs-2"></i>
                        <h5 class="card-title">@localizer["Products"]</h5>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <a asp-area="Admin" asp-controller="Brand" asp-action="Index" class="text-decoration-none text-primary">
                        <i class="bi bi-star fs-2"></i>
                        <h5 class="card-title">@localizer["Brands"]</h5>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <a asp-area="Admin" asp-controller="Roles" asp-action="Index" class="text-decoration-none text-primary">
                        <i class="bi bi-person-badge fs-2"></i>
                        <h5 class="card-title">@localizer["User Roles"]</h5>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="text-decoration-none text-primary">
                        <i class="bi bi-cart fs-2"></i>
                        <h5 class="card-title">@localizer["Orders"]</h5>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
